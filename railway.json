{
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "npm start",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 600,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "sleepApplication": false,
    "watchPatterns": [
      {
        "pattern": "**/*",
        "ignore": [".wwebjs_auth/**", "database.json", "node_modules/**"]
      }
    ]
  }
}
